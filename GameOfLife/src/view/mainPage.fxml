<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="550" maxWidth="550" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400" prefWidth="550" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.mainPageController">
    <padding>
        <Insets top="20.0" />
    </padding>
    <top>
        <GridPane maxHeight="150" maxWidth="-Infinity" prefHeight="100.0" prefWidth="500.0" vgap="5.0" BorderPane.alignment="TOP_CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
            <children>
                <Label fx:id="title" style="-fx-font-size: 24pt" text="The Game of Life" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
                <!-- Row #1 -->
                <Label fx:id="serverIpAddressPrompt" style="-fx-font-size: 18pt" text="Server IP address:" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="1" />
                <TextField fx:id="serverIpAddress" maxWidth="100" text="127.0.0.1" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                <Button fx:id="connectButton" onAction="#startConnection" text="Connect" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                <!--Row #2 -->
                <Label fx:id="currentBoardDimensionsLabel" minWidth="200" style="-fx-font-size: 20pt" text="The grid size is: " visible="false" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="2" />
                <!--Row #3 -->
                <Label fx:id="boardDimensionsLabel" minWidth="200" style="-fx-font-size: 18pt" text="Enter grid size:" visible="false" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="3" />
                <TextField fx:id="size" maxWidth="60" promptText="Size" visible="false" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
                <Button fx:id="resizeGridButton" onAction="#resizeGridAction" text="Resize Grid" textAlignment="CENTER" visible="false" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                <!--Row #4 -->
                <Label fx:id="delayLabel" style="-fx-font-size: 18pt" text="Delay in (ms): " textAlignment="CENTER" GridPane.halignment="LEFT" GridPane.rowIndex="4" GridPane.columnIndex="0" visible="true"/>
                <TextField fx:id="delayInput" maxWidth="70" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="0" visible="true"/>
                <Button fx:id="iterationDelayButton" onAction="#setDelay" text="Set Delay" textAlignment="CENTER" GridPane.halignment="RIGHT" GridPane.rowIndex="4" GridPane.columnIndex="0" visible="true"/>
                <!--Row #5 -->
                <Button fx:id="pauseGameButton" onAction="#pauseGame" text="Pause" textAlignment="CENTER" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.halignment="LEFT" visible="false"/>
                <Button fx:id="playGameButton" onAction="#playGame" text="Play" textAlignment="CENTER" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.halignment="LEFT" visible="false"/>
                <Button onAction="#quit" text="Quit" textAlignment="CENTER" GridPane.halignment="RIGHT" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <!--Row # 6 -->
                <Label fx:id="statusLabel" textAlignment="CENTER" visible="false" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.columnIndex="0" />
            </children>
        </GridPane>
    </top>
    <center>
        <GridPane fx:id="displayGrid" prefHeight="0" prefWidth="0" BorderPane.alignment="CENTER">
            <style>-fx-border-width: 10</style>
            <style>-fx-border-style: solid</style>
            <style>-fx-border-color: black</style>
            <visible>false</visible>
        </GridPane>
    </center>
</BorderPane>
